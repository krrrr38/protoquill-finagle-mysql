<configuration>

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <Pattern>
                [QuillTest] %d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n
            </Pattern>
        </encoder>
    </appender>

    <logger name="com.krrrr38.getquill" level="DEBUG" />
    <root level="info">
        <appender-ref ref="CONSOLE"/>
    </root>

</configuration>
